{
  "buildCommand": "npx prisma generate && cd packages/frontend && npm install && npx vite build",
  "outputDirectory": "packages/frontend/dist",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" }
  ],
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
