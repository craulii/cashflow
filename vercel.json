{
  "version": 2,
  "buildCommand": "ls -la && cd packages/frontend && npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "packages/frontend/dist",
  "installCommand": "npm install --legacy-peer-deps && npx prisma@5.22.0 generate",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" }
  ],
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
