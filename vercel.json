{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npx prisma@5.22.0 generate && cd packages/frontend && npm install --legacy-peer-deps && ./node_modules/.bin/vite build",
  "outputDirectory": "packages/frontend/dist",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" }
  ],
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
